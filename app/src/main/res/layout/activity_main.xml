<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sayeedul.calculator.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffd157"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:background="#bebebe"
            android:paddingTop="15dp"
            android:text="Normal Calculator"
            android:textAlignment="center"
            android:textColor="@android:color/holo_purple"
            android:textSize="45sp" />

        <LinearLayout
            android:id="@+id/operator_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#21354a"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/textColorHighlightInverse"
                android:onClick="operandGetterOnClick"
                android:padding="20dp"
                android:text="+"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#47596f"
                android:onClick="operandGetterOnClick"
                android:padding="20dp"
                android:text="-"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#47596f"
                android:padding="20dp"
                android:text="="
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="24sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#47596f"
                android:onClick="operandGetterOnClick"
                android:padding="20dp"
                android:text="*"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?android:attr/textColorHighlightInverse"
                android:onClick="operandGetterOnClick"
                android:padding="20dp"
                android:text="/"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbar1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="#21354a"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:visibility="visible" />

            <Button
                android:id="@+id/buttontwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#21354a"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbar2"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:background="#21354a"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonfour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#21354a"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonfive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonsix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#21354a"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbar3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_weight="1"
            android:background="#21354a"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonseven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttoneight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#21354a"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <Button
                android:id="@+id/buttonnine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/numbar4"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_weight="1"
            android:background="#21354a"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonreset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#21354a"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="DEL"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttonzero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:onClick="valueGetterOnClick"
                android:padding="20dp"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

            <Button
                android:id="@+id/buttondeci"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#21354a"
                android:padding="20dp"
                android:text="CLR"
                android:textColor="@android:color/white"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>